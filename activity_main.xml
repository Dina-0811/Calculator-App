<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sol"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/res"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="textEnd"
        android:textSize="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/res"
        android:text="0"
        android:textSize="60dp"
        android:textAlignment="textEnd"
        android:layout_above="@id/buttonver"
        android:layout_margin="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonver">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_c"
                android:text="C"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="#FEFFFF"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_c1"
                android:text="("
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_c2"
                android:text=")"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_c3"
                android:text="/"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_7"
                android:text="7"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_8"
                android:text="8"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_9"
                android:text="9"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_x"
                android:text="*"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_4"
                android:text="4"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_5"
                android:text="5"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_6"
                android:text="6"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_s"
                android:text="-"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_1"
                android:text="1"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_2"
                android:text="2"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_3"
                android:text="3"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_a"
                android:text="+"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_ac"
                android:text="AC"
                android:textSize="21dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_0"
                android:text="0"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_."
                android:text="."
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/button_e"
                android:text="="
                android:textSize="35dp"
                android:layout_margin="12dp"
                android:textColor="#ED1808"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:backgroundTint="@color/white"
                app:cornerRadius="45dp"/>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>